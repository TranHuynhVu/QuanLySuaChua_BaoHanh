@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole<int>>
@{
    ViewData["Title"] = "Quản lý roles";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">Quản lý Roles</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Danh sách Roles
        </div>
        <div class="card-body">
            <p>
                <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Create" class="btn btn-primary">Thêm role mới</a>
                <a asp-area="QuanTriVien" asp-controller="Role" asp-action="AssignRoles" class="btn btn-success">Phân quyền</a>

            </p>

            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên Role</th>
                            <th>Tùy chọn</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td>
                                    <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-info btn-sm">Sửa</a>
                                    <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">Xóa</a>
                                </td>
                            </tr>
                        }   
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
