@model QuanLySuaChua_BaoHanh.Models.PhieuSuaChua

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Edit</h1>

<h4>PhieuSuaChua</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PhieuSuaChuaId" />

            <div class="form-group">
                <label asp-for="KhachHangId" class="control-label"></label>
                <input asp-for="KhachHangId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="KyThuatId" class="control-label"></label>
                <select asp-for="KyThuatId" class="form-control" asp-items="ViewBag.KyThuatId"></select>
                <span asp-validation-for="KyThuatId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhuongId" class="control-label"></label>
                <input asp-for="PhuongId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="MoTaKhachHang" class="control-label"></label>
                <input asp-for="MoTaKhachHang" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NgayGui" class="control-label"></label>
                <input asp-for="NgayGui" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NgayHen" class="control-label"></label>
                <input asp-for="NgayHen" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NgayTra" class="control-label"></label>
                <input asp-for="NgayTra" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="DiaChiNhanTraSanPham" class="control-label"></label>
                <input asp-for="DiaChiNhanTraSanPham" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="KhoangCach" class="control-label"></label>
                <input asp-for="KhoangCach" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PhiVanChuyen" class="control-label"></label>
                <input asp-for="PhiVanChuyen" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NgayThanhToan" class="control-label"></label>
                <input asp-for="NgayThanhToan" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="PhuongThucThanhToan" class="control-label"></label>
                <input asp-for="PhuongThucThanhToan" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="TongTien" class="control-label"></label>
                <input asp-for="TongTien" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="GhiChu" class="control-label"></label>
                <input asp-for="GhiChu" class="form-control" readonly />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h5>Kỹ thuật viên đã được phân công</h5>
        <ul>
            @foreach (var kt in ViewBag.AssignedTechnicians as List<QuanLySuaChua_BaoHanh.Models.NguoiDung>)
            {
                <li>@kt.Id - @kt.HoTen</li>
            }
        </ul>
        <h5>Kỹ thuật viên chưa được phân công</h5>
        <ul>
            @foreach (var kt in ViewBag.UnassignedTechnicians as List<QuanLySuaChua_BaoHanh.Models.NguoiDung>)
            {
                <li>@kt.Id - @kt.HoTen</li>
            }
        </ul>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}