@model IEnumerable<QuanLySuaChua_BaoHanh.Models.Phuong>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenPhuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenPhuong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quan.QuanId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PhuongId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PhuongId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PhuongId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
