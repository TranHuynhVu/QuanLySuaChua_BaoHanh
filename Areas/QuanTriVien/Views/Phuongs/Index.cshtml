@model IEnumerable<QuanLySuaChua_BaoHanh.Models.Phuong>

@{
    ViewData["Title"] = "Phường/Xã";
    Layout = "~/Areas/QuanTriVien/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid p-0">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 style="font-family: 'Baloo 2', cursive; color: var(--blue-primary); font-weight: 600;">Danh Sách Phường/Xã</h1>
        <div>
            <a asp-action="Index" asp-controller="Locations" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-1"></i> Quay lại
            </a>
        <a asp-action="Create" class="btn" style="background-color: var(--blue-primary); color: white;">
            <i class="bi bi-plus-circle"></i> Thêm Mới
        </a>
        </div>
    </div>
    
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead style="background-color: var(--blue-primary); color: white;">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.PhuongId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.TenPhuong)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Quan)
                            </th>
                            <th>
                                Thành Phố
                            </th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.PhuongId)</span>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TenPhuong)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quan.TenQuan)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quan.ThanhPho.TenThanhPho)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.PhuongId" class="btn btn-sm" style="background-color: #ffc107; color: white;">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PhuongId" class="btn btn-sm" style="background-color: var(--blue-primary); color: white;">
                                    <i class="bi bi-info-circle"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PhuongId" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
