@model QuanLySuaChua_BaoHanh.Areas.QuanTriVien.Controllers.AccountsOverviewViewModel
@{
    ViewData["Title"] = "Quản lý tài khoản và phân quyền";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <h1 class="mt-4">Quản lý tài khoản và phân quyền</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="row">
        <!-- Người dùng Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-people mr-1"></i>
                            Quản lý người dùng
                        </div>
                        <div>
                            <a asp-area="QuanTriVien" asp-controller="User" asp-action="Create" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm người dùng
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên người dùng</th>
                                    <th>Họ tên</th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var user in Model.Users)
                                {
                                    <tr>
                                        <td>@user.Id</td>
                                        <td>@user.UserName</td>
                                        <td>@user.HoTen</td>
                                        <td>
                                            <a asp-area="QuanTriVien" asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-info btn-sm">
                                                <i class="bi bi-info-circle"></i>
                                            </a>
                                            <a asp-area="QuanTriVien" asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="QuanTriVien" asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-area="QuanTriVien" asp-controller="User" asp-action="Index" class="btn btn-outline-primary">
                            Xem tất cả người dùng
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Vai trò Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <i class="bi bi-person-badge mr-1"></i>
                            Quản lý vai trò
                        </div>
                        <div>
                            <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Create" class="btn btn-sm btn-primary">
                                <i class="bi bi-plus-circle"></i> Thêm vai trò
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên vai trò</th>
                                    <th>Tùy chọn</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in Model.Roles)
                                {
                                    <tr>
                                        <td>@role.Id</td>
                                        <td>@role.Name</td>
                                        <td>
                                            <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-primary btn-sm">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="text-center mt-3">
                        <a asp-area="QuanTriVien" asp-controller="Role" asp-action="Index" class="btn btn-outline-primary">
                            Xem tất cả vai trò
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Phân quyền Card -->
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="bi bi-shield-lock mr-1"></i>
                    Phân quyền người dùng
                </div>
            </div>
        </div>
        <div class="card-body">
            <p class="mb-4">
                Tại đây bạn có thể quản lý vai trò cho từng người dùng trong hệ thống, giúp phân quyền truy cập
                vào các chức năng khác nhau.
            </p>
            <div class="text-center">
                <a asp-area="QuanTriVien" asp-controller="Role" asp-action="AssignRoles" class="btn btn-success btn-lg">
                    <i class="bi bi-person-gear mr-1"></i> Phân quyền người dùng
                </a>
            </div>
        </div>
    </div>
</div>
