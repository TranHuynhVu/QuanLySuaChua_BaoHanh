@model QuanLySuaChua_BaoHanh.Models.PhieuSuaChua
@{
    ViewData["Title"] = "Chi tiết đơn sửa chữa #" + Model.PhieuSuaChuaId;
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.3/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/css/DonSuaChua.css">
}

<div class="container mt-4">
    <!-- Nút quay lại -->
    <div class="mb-4">
        <a href="/KhachHang/DonSuaChua" class="btn btn-outline-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-left me-2" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
            </svg>
            Quay lại danh sách
        </a>
    </div>

    <!-- Header và trạng thái -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-0">Đơn sửa chữa <span class="fw-bold text-primary">#@Model.PhieuSuaChuaId</span></h4>
                    <p class="text-muted mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-calendar-event me-1" viewBox="0 0 16 16">
                            <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z"/>
                            <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z"/>
                        </svg>
                        Ngày gửi: @Model.NgayGui.ToString("dd/MM/yyyy HH:mm")
                    </p>
                </div>
                <div class="status-badge @(Model.TrangThai switch {
                    "ChoXacNhan" => "status-waiting",
                    "DaTiepNhan" => "status-received",
                    "DangSuaChua" => "status-repairing",
                    "HoanThanh" => "status-completed",
                    "DaHuy" => "status-cancelled",
                    _ => "status-default"
                })">
                    @switch (Model.TrangThai)
                    {
                        case "ChoXacNhan":
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                            </svg>
                            <span>Chờ xác nhận</span>
                            break;
                        case "DaTiepNhan":
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                            </svg>
                            <span>Đã tiếp nhận</span>
                            break;
                        case "DangSuaChua":
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M11.5 2a1.5 1.5 0 1 0 0 3 1.5 1.5 0 0 0 0-3zm-9.05 3.636a2 2 0 0 1 2.828 0l.144.144.742-.742a3 3 0 0 1 4.243 0l2.121 2.121a1 1 0 0 1-1.414 1.414l-2.121-2.121a1 1 0 0 0-1.414 0l-.742.742.147.146a2 2 0 1 1-2.828 0A3 3 0 0 1 10 3.969L12.031 6 11 7.031l-2.121-2.121a1 1 0 0 0-1.414 0L5.051 7.051a1 1 0 0 1-1.832-.748 2 2 0 0 1 .832-.664l4.945-2.613A3 3 0 0 0 8.88 2h.17a3 3 0 0 1 2.113.88l.1.1a1.99 1.99 0 0 1 .247.294 1 1 0 1 1-1.552 1.262 3.018 3.018 0 0 0-.363-.396l-1.131 1.131A1 1 0 0 1 9 6a1 1 0 0 1 .555.168l1.384-1.028a3 3 0 0 1 4.579 2.284 5.027 5.027 0 0 1-1.779 4.5l-1.9 1.773a1 1 0 1 1-1.366-1.463l1.9-1.773a3.026 3.026 0 0 0 1.078-2.533 1 1 0 0 0-1.527-.855L10 8l.478 2.874A1 1 0 0 1 9.1 12h-.17a3 3 0 0 1-2.112-.879l-.1-.099a1.982 1.982 0 0 1-.247-.295 1 1 0 1 1 1.551-1.262 3.016 3.016 0 0 0 .363.396l1.132-1.132A1 1 0 0 1 7 7.5a1 1 0 0 1-.555-.168L5.062 8.36a3 3 0 0 1-4.58-2.284 5.026 5.026 0 0 1 1.78-4.5l1.899-1.772a1 1 0 1 1 1.366 1.463l-1.9 1.773a3.026 3.026 0 0 0-1.078 2.533 1 1 0 0 0 1.527.855l1.023-.76L5 3l2.45 2.45z"/>
                            </svg>
                            <span>Đang sửa chữa</span>
                            break;
                        case "HoanThanh":
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M12.354 4.354a.5.5 0 0 0-.708-.708L5 10.293 1.854 7.146a.5.5 0 1 0-.708.708l3.5 3.5a.5.5 0 0 0 .708 0l7-7zm-4.208 7-.896-.897.707-.707.543.543 6.646-6.647a.5.5 0 0 1 .708.708l-7 7a.5.5 0 0 1-.708 0z"/>
                                <path d="m5.354 7.146.896.897-.707.707-.897-.896a.5.5 0 1 1 .708-.708z"/>
                            </svg>
                            <span>Hoàn thành</span>
                            break;
                        case "DaHuy":
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
                            </svg>
                            <span>Đã hủy</span>
                            break;
                        default:
                            <svg class="status-icon me-2" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M5.255 5.786a.237.237 0 0 0 .241.247h.825c.138 0 .248-.113.266-.25.09-.656.54-1.134 1.342-1.134.686 0 1.314.343 1.314 1.168 0 .635-.374.927-.965 1.371-.673.489-1.206 1.06-1.168 1.987l.003.217a.25.25 0 0 0 .25.246h.811a.25.25 0 0 0 .25-.25v-.105c0-.718.273-.927 1.01-1.486.609-.463 1.244-.977 1.244-2.056 0-1.511-1.276-2.241-2.673-2.241-1.267 0-2.655.59-2.75 2.286zm1.557 5.763c0 .533.425.927 1.01.927.609 0 1.028-.394 1.028-.927 0-.552-.42-.94-1.029-.94-.584 0-1.009.388-1.009.94z"/>
                            </svg>
                            <span>Không xác định</span>
                            break;
                    }
                </div>
            </div>
        </div>
    </div>
    
    <div class="row">
        <!-- Thông tin chung -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle text-primary me-2" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                        </svg>
                        Thông tin chung
                    </h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tbody>
                            <tr>
                                <td class="fw-medium" style="width: 40%">Khách hàng:</td>
                                <td>@Model.KhachHang.HoTen</td>
                            </tr>
                            <tr>
                                <td class="fw-medium">Địa chỉ nhận/trả:</td>
                                <td>@Model.DiaChiNhanTraSanPham</td>
                            </tr>
                            <tr>
                                <td class="fw-medium">Kỹ thuật viên:</td>
                                <td>@(Model.KyThuat != null ? Model.KyThuat.HoTen : "Chưa phân công")</td>
                            </tr>
                            <tr>
                                <td class="fw-medium">Ngày hẹn:</td>
                                <td>@(Model.NgayHen.HasValue ? Model.NgayHen.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa xác định")</td>
                            </tr>
                            <tr>
                                <td class="fw-medium">Ngày trả:</td>
                                <td>@(Model.NgayTra.HasValue ? Model.NgayTra.Value.ToString("dd/MM/yyyy HH:mm") : "Chưa hoàn thành")</td>
                            </tr>
                            @if (Model.TrangThai == "HoanThanh" && Model.NgayThanhToan.HasValue)
                            {
                                <tr>
                                    <td class="fw-medium">Ngày thanh toán:</td>
                                    <td>@Model.NgayThanhToan.Value.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td class="fw-medium">Phương thức thanh toán:</td>
                                    <td>@Model.PhuongThucThanhToan</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Mô tả và ghi chú -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-header bg-white border-0">
                    <h5 class="card-title mb-0">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-chat-left-text text-primary me-2" viewBox="0 0 16 16">
                            <path d="M14 1a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1h-2.5a2 2 0 0 0-1.6.8L8 14.333 6.1 11.8a2 2 0 0 0-1.6-.8H2a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1h12zM2 0a2 2 0 0 0-2 2v8a2 2 0 0 0 2 2h2.5a1 1 0 0 1 .8.4l1.9 2.533a1 1 0 0 0 1.6 0l1.9-2.533a1 1 0 0 1 .8-.4H14a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2z"/>
                            <path d="M3 3.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 6a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 6zm0 2.5a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                        Mô tả vấn đề
                    </h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h6 class="fw-medium text-muted mb-2">Mô tả của khách hàng:</h6>
                        <p class="border-start border-3 border-primary ps-3 py-1">@Model.MoTaKhachHang</p>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.GhiChu))
                    {
                        <div>
                            <h6 class="fw-medium text-muted mb-2">Ghi chú của nhân viên:</h6>
                            <p class="border-start border-3 border-warning ps-3 py-1">@Model.GhiChu</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>    <!-- Tiến trình xử lý -->
    @if (Model.TrangThai != "DaHuy")
    {
        <div class="card mb-4 border-0 shadow-sm">
            <div class="card-header bg-white border-0">
                <h5 class="card-title mb-0">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-bar-chart-steps text-primary me-2" viewBox="0 0 16 16">
                        <path d="M.5 0a.5.5 0 0 1 .5.5v15a.5.5 0 0 1-1 0V.5A.5.5 0 0 1 .5 0zM2 1.5a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-4a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-6a.5.5 0 0 1-.5-.5v-1zm2 4a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-7a.5.5 0 0 1-.5-.5v-1z"/>
                    </svg>
                    Tiến trình xử lý
                </h5>
            </div>
            <div class="card-body">
            <!-- Visual progress bar -->
                <div class="progress-tracker mb-4">
                    <div class="progress-step @(Model.TrangThai != "ChoXacNhan" && Model.TrangThai != "DaHuy" ? "completed" : (Model.TrangThai == "ChoXacNhan" ? "active" : ""))">
                        <div class="step-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-clock" viewBox="0 0 16 16">
                                <path d="M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71V3.5z"/>
                                <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm7-8A7 7 0 1 1 1 8a7 7 0 0 1 14 0z"/>
                            </svg>
                        </div>
                        <div class="step-label">Chờ xác nhận</div>
                    </div>
                    <div class="progress-step @(Model.TrangThai == "DaTiepNhan" || Model.TrangThai == "DangSuaChua" || Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="step-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                            </svg>
                        </div>
                        <div class="step-label">Đã tiếp nhận</div>
                    </div>
                    <div class="progress-step @(Model.TrangThai == "DangSuaChua" || Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="step-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-tools" viewBox="0 0 16 16">
                                <path d="M1 0 0 1l2.2 3.081a1 1 0 0 0 .815.419h.07a1 1 0 0 1 .708.293l2.675 2.675-2.617 2.654A3.003 3.003 0 0 0 0 13a3 3 0 1 0 5.878-.851l2.654-2.617.968.968-.305.914a1 1 0 0 0 .242 1.023l3.27 3.27a.997.997 0 0 0 1.414 0l1.586-1.586a.997.997 0 0 0 0-1.414l-3.27-3.27a1 1 0 0 0-1.023-.242L10.5 9.5l-.96-.96 2.68-2.643A3.005 3.005 0 0 0 16 3c0-.269-.035-.53-.102-.777l-2.14 2.141L12 4l-.364-1.757L13.777.102a3 3 0 0 0-3.675 3.68L7.462 6.46 4.793 3.793a1 1 0 0 1-.293-.707v-.071a1 1 0 0 0-.419-.814L1 0zm9.646 10.646a.5.5 0 0 1 .708 0l2.914 2.915a.5.5 0 0 1-.707.707l-2.915-2.914a.5.5 0 0 1 0-.708zM3 11l.471.242.529.026.287.445.445.287.026.529L5 13l-.242.471-.026.529-.445.287-.287.445-.529.026L3 15l-.471-.242L2 14.732l-.287-.445L1.268 14l-.026-.529L1 13l.242-.471.026-.529.445-.287.287-.445.529-.026L3 11z"/>
                            </svg>
                        </div>
                        <div class="step-label">Đang sửa chữa</div>
                    </div>
                    <div class="progress-step @(Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="step-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-box-seam" viewBox="0 0 16 16">
                                <path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5l2.404.961L10.404 2l-2.218-.887zm3.564 1.426L5.596 5 8 5.961 14.154 3.5l-2.404-.961zm3.25 1.7-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923l6.5 2.6zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464L7.443.184z"/>
                            </svg>
                        </div>
                        <div class="step-label">Hoàn thành</div>
                    </div>
                </div>

                <div class="process-timeline">
                    <div class="timeline-item @(Model.TrangThai != "ChoXacNhan" && Model.TrangThai != "DaHuy" ? "completed" : (Model.TrangThai == "ChoXacNhan" ? "active" : ""))">
                        <div class="timeline-badge">
                            <i class="bi bi-1-circle"></i>
                        </div>
                        <div class="timeline-content">
                            <h6>Chờ xác nhận</h6>
                            <p class="timeline-date">@Model.NgayGui.ToString("dd/MM/yyyy HH:mm")</p>
                            <p class="timeline-desc">Đơn sửa chữa đã được gửi và đang chờ xác nhận từ cửa hàng</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.TrangThai == "DaTiepNhan" || Model.TrangThai == "DangSuaChua" || Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="timeline-badge">
                            <i class="bi bi-2-circle"></i>
                        </div>
                        <div class="timeline-content">
                            <h6>Đã tiếp nhận</h6>
                            <p class="timeline-desc">Đơn hàng đã được tiếp nhận, kỹ thuật viên sẽ liên hệ với bạn</p>
                            @if (Model.TrangThai != "ChoXacNhan" && Model.NgayHen.HasValue)
                            {
                                <p class="timeline-date">Ngày hẹn: @Model.NgayHen.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            }
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.TrangThai == "DangSuaChua" || Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="timeline-badge">
                            <i class="bi bi-3-circle"></i>
                        </div>
                        <div class="timeline-content">
                            <h6>Đang sửa chữa</h6>
                            <p class="timeline-desc">Sản phẩm của bạn đang được sửa chữa</p>
                        </div>
                    </div>
                    
                    <div class="timeline-item @(Model.TrangThai == "HoanThanh" ? "completed" : "")">
                        <div class="timeline-badge">
                            <i class="bi bi-4-circle"></i>
                        </div>
                        <div class="timeline-content">
                            <h6>Hoàn thành</h6>
                            <p class="timeline-desc">Đơn sửa chữa đã hoàn thành và sẵn sàng để giao</p>
                            @if (Model.TrangThai == "HoanThanh" && Model.NgayTra.HasValue)
                            {
                                <p class="timeline-date">Ngày trả: @Model.NgayTra.Value.ToString("dd/MM/yyyy HH:mm")</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Danh sách sản phẩm -->
    <div class="card mb-4 border-0 shadow-sm">
        <div class="card-header bg-white border-0">
