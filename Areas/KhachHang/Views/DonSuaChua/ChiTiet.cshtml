<script>
    document.addEventListener('DOMContentLoaded', function() {
        // --- RATING FUNCTIONALITY ---
        const stars = document.querySelectorAll('.star');
        const ratingStars = document.querySelectorAll('input[name="rating"]');
        const ratingText = document.getElementById('rating-text');
        const ratingDescriptions = [
            'Rất không hài lòng', // 1 star
            'Không hài lòng',     // 2 stars
            'Bình thường',       // 3 stars
            'Hài lòng',          // 4 stars
            'Rất hài lòng'       // 5 stars
        ];
        
        // Set up star rating hover effects
        stars.forEach(function(star, index) {
            star.addEventListener('mouseenter', function() {
                // Fill in this star and all previous stars
                for (let i = 0; i <= index; i++) {
                    stars[i].classList.add('hovered');
                }
                
                // Show rating description
                ratingText.textContent = ratingDescriptions[index];
                ratingText.classList.add('active');
            });
            
            star.addEventListener('mouseleave', function() {
                // Remove hover effect
                stars.forEach(s => s.classList.remove('hovered'));
                
                // Reset rating text or show selected rating
                let selectedIndex = -1;
                ratingStars.forEach((rs, i) => {
                    if (rs.checked) {
                        selectedIndex = i;
                    }
                });
                
                if (selectedIndex !== -1) {
                    ratingText.textContent = ratingDescriptions[selectedIndex];
                } else {
                    ratingText.textContent = 'Chưa đánh giá';
                    ratingText.classList.remove('active');
                }
            });
            
            // Handle click event
            star.addEventListener('click', function() {
                ratingStars[index].checked = true;
                ratingText.textContent = ratingDescriptions[index];
                ratingText.classList.add('active');
            });
        });
        
        // Open rating modal
        document.querySelector('.open-rating-modal')?.addEventListener('click', function() {
            const modal = new bootstrap.Modal(document.getElementById('ratingModal'));
            modal.show();
        });
        
        // Submit rating
        document.getElementById('submit-rating')?.addEventListener('click', function() {
            const rating = document.querySelector('input[name="rating"]:checked');
            const comment = document.getElementById('comment').value;
            
            if (!rating) {
                Swal.fire({
                    icon: 'error',
                    title: 'Thiếu thông tin',
                    text: 'Vui lòng chọn số sao đánh giá!'
                });
                return;
            }
            
            // Get selected tech attributes
            const techAttributes = [];
            document.querySelectorAll('input[type="checkbox"]:checked').forEach(function(checkbox) {
                techAttributes.push(checkbox.value);
            });
            
            // Here you would normally send this data to the server via AJAX
