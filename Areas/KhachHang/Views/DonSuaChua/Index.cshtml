@{
    ViewData["Title"] = "Đơn sửa chữa/Bảo hành";
}

<div class="container-fluid px-4 mt-6">
    <h2 class="text-center main-title">ĐƠN SỬA CHỮA/BẢO HÀNH</h2>

    <div class="repair-tabs-container">
        <ul class="nav nav-tabs custom-tabs" id="repairTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="all-tab" data-bs-toggle="tab" data-bs-target="#all" type="button" role="tab">
                    Tất cả
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="waiting-tab" data-bs-toggle="tab" data-bs-target="#waiting" type="button" role="tab">
                    Chờ xác nhận
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="received-tab" data-bs-toggle="tab" data-bs-target="#received" type="button" role="tab">
                    Đã tiếp nhận
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="repairing-tab" data-bs-toggle="tab" data-bs-target="#repairing" type="button" role="tab">
                    Đang sửa chữa
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="completed-tab" data-bs-toggle="tab" data-bs-target="#completed" type="button" role="tab">
                    Hoàn thành
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="cancelled-tab" data-bs-toggle="tab" data-bs-target="#cancelled" type="button" role="tab">
                    Đã hủy
                </button>
            </li>
        </ul>

        <div class="tab-content mt-4" id="repairTabContent">
            <div class="tab-pane fade show active" id="all" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.AllOrders != null && ViewBag.AllOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.AllOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Chưa có đơn sửa chữa nào
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="waiting" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.PendingOrders != null && ViewBag.PendingOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.PendingOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Không có đơn sửa chữa nào đang chờ xác nhận
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="received" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.ConfirmedOrders != null && ViewBag.ConfirmedOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.ConfirmedOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Không có đơn sửa chữa nào đã được tiếp nhận
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="repairing" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.RepairingOrders != null && ViewBag.RepairingOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.RepairingOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Không có đơn sửa chữa nào đang được sửa
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="completed" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.CompletedOrders != null && ViewBag.CompletedOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.CompletedOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Không có đơn sửa chữa nào đã hoàn thành
                        </div>
                    }
                </div>
            </div>

            <div class="tab-pane fade" id="cancelled" role="tabpanel">
                <div class="repair-orders-list">
                    @if (ViewBag.CancelledOrders != null && ViewBag.CancelledOrders.Count > 0)
                    {
                        foreach (var order in ViewBag.CancelledOrders)
                        {
                            <partial name="_RepairOrderCard" model="order" />
                        }
                    }
                    else
                    {
                        <div class="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            Không có đơn sửa chữa nào đã bị hủy
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container-fluid {
            padding-top: 6rem;
            padding-bottom: 2rem;
        }

        .main-title {
            color: #2c3e50;
            font-weight: 600;
            margin-bottom: 2rem;
            position: relative;
            padding-bottom: 1rem;
        }

        .main-title:after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background: linear-gradient(90deg, #3498db, #2ecc71);
            border-radius: 2px;
        }

        .repair-tabs-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
            padding: 1.5rem;
        }

        .custom-tabs {
            border-bottom: 2px solid #e9ecef;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .nav-tabs .nav-link {
            color: #6c757d;
            border: none;
            padding: 0.75rem 1.25rem;
            font-weight: 500;
            transition: all 0.3s ease;
            border-radius: 8px 8px 0 0;
            position: relative;
        }

        .nav-tabs .nav-link:hover {
            color: #3498db;
            background-color: #f8f9fa;
        }

        .nav-tabs .nav-link.active {
            color: #3498db;
            background-color: transparent;
            font-weight: 600;
        }

        .nav-tabs .nav-link.active:after {
            content: '';
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 2px;
            background: #3498db;
        }

        .tab-content {
            padding: 1rem 0;
        }

        .repair-orders-list {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .tab-pane .alert {
            margin: 1rem 0;
            border-radius: 8px;
            padding: 1rem 1.5rem;
            background-color: #e8f4ff;
            border: 1px solid #b8dfff;
            color: #0066cc;
        }

