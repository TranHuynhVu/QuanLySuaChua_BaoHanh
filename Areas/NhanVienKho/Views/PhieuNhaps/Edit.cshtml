@model QuanLySuaChua_BaoHanh.Models.PhieuNhap

@{
    ViewData["Title"] = "Sửa phiếu nhập";
    Layout = "~/Areas/NhanVienKho/Views/Shared/_LayoutStashEmployee.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square"></i> Sửa phiếu nhập
                    </h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="PhieuNhapId" />

                        <div class="mb-3">
                            <label asp-for="KhoId" class="form-label"></label>
                            <select asp-for="KhoId" class="form-select" asp-items="ViewBag.KhoId"></select>
                            <span asp-validation-for="KhoId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="NgayNhap" class="form-label"></label>
                            <input asp-for="NgayNhap" class="form-control" type="date" />
                            <span asp-validation-for="NgayNhap" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TongTien" class="form-label"></label>
                            <input asp-for="TongTien" class="form-control" />
                            <span asp-validation-for="TongTien" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label"></label>
                            <input asp-for="TrangThai" class="form-control" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="GhiChu" class="form-label"></label>
                            <input asp-for="GhiChu" class="form-control" />
                            <span asp-validation-for="GhiChu" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning me-2">
                                <i class="bi bi-save"></i> Lưu thay đổi
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
