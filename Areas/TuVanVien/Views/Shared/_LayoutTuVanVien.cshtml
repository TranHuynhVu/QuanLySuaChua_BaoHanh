@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Nhân viên chăm sóc khách hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 240px;
            min-height: 100vh;
            background-color: #0eaac2;
            position: fixed;
            top: 0;
            left: 0;
            color: white;
        }

            .sidebar .avatar {
                text-align: center;
                padding: 20px 10px 10px;
            }

                .sidebar .avatar img {
                    width: 80px;
                    height: 80px;
                }

                .sidebar .avatar h5 {
                    margin-top: 10px;
                    font-weight: bold;
                    font-size: 16px;
                }

            .sidebar .nav-link {
                color: white;
                padding: 12px 20px;
                display: flex;
                align-items: center;
            }

                .sidebar .nav-link:hover,
                .sidebar .nav-link.active {
                    background-color: white;
                    color: black;
                    font-weight: bold;
                }

                .sidebar .nav-link i {
                    margin-right: 10px;
                }

        .main-content {
            margin-left: 240px;
            padding: 0;
        }

        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 30px;
            background-color: #fff;
            border-bottom: 1px solid #ccc;
        }

            .header .logo {
                font-size: 20px;
                font-weight: bold;
                color: #319bc5;
            }

        .search-box {
            display: flex;
            align-items: center;
        }

            .search-box input {
                padding: 6px 12px;
                border: 1px solid #ccc;
                border-radius: 20px 0 0 20px;
                outline: none;
            }

            .search-box button {
                border-radius: 0 20px 20px 0;
                border: 1px solid #ccc;
                background-color: #319bc5;
                color: white;
                padding: 6px 12px;
            }

        .icons i {
            font-size: 20px;
            margin-left: 20px;
            color: #319bc5;
        }

        .body-content {
            padding: 30px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="avatar">
            <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" class="rounded-circle" />
            <h5>Nhân viên chăm sóc khách hàng</h5>
        </div>

        <nav class="nav flex-column mt-3">
            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")"
               asp-area="TuVanVien" asp-controller="Home" asp-action="Index">
                <i class="bi bi-house"></i> Trang chủ
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CapNhatKH" ? "active" : "")"
               asp-area="TuVanVien" asp-controller="CapNhatKH" asp-action="CapNhatKhachHang">
                <i class="bi bi-person-lines-fill"></i> Cập nhật KH
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "DuyetDon" ? "active" : "")"
               asp-area="TuVanVien" asp-controller="DuyetDon" asp-action="DanhSachDon">
                <i class="bi bi-clipboard-check"></i> Duyệt đơn YC
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "CapNhatDon" ? "active" : "")"
               asp-area="TuVanVien" asp-controller="CapNhatDon" asp-action="CapNhatDon">
                <i class="bi bi-pencil-square"></i> Cập nhật đơn
            </a>

            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ThongKe" ? "active" : "")"
               asp-area="TuVanVien" asp-controller="ThongKe" asp-action="Index">
                <i class="bi bi-bar-chart-line"></i> Xem thống kê/báo cáo
            </a>
        </nav>
    </div>

    <div class="main-content">
        <div class="header">
            <div class="logo">Panasonic - Trung tâm bảo hành</div>
            <div class="search-box">
                <input type="text" placeholder="Tìm kiếm..." />
                <button><i class="bi bi-search"></i></button>
            </div>
            <div class="icons">
                <i class="bi bi-geo-alt-fill"></i>
                <i class="bi bi-facebook"></i>
                <i class="bi bi-person-circle"></i>
            </div>
        </div>

        <div class="body-content">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
